<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <record id="wkf_bc_quality_result" model="workflow">
        <field name="name">Quality Result Workflow</field>
        <field name="osv">bc_quality.result</field>
        <field name="on_create" eval="1" />
    </record>

    <!-- Activities -->
    <record id="bc_quality.action_done" model="workflow.activity">
        <field name="kind">function</field>
        <field name="name">done</field>
        <field name="join_mode">XOR</field>
        <field model="workflow" name="wkf_id" ref="wkf_bc_quality_result" />
        <field name="split_mode">XOR</field>
        <field name="action">action_done()</field>
        <field name="flow_stop" eval="0" />
        <field eval="0" name="flow_start"/>
    </record>

    <record id="bc_quality.action_draft" model="workflow.activity">
        <field name="kind">function</field>
        <field name="name">draft</field>
        <field name="join_mode">XOR</field>
        <field model="workflow" name="wkf_id" ref="wkf_bc_quality_result" />
        <field name="split_mode">XOR</field>
        <field name="action">action_draft()</field>
        <field name="flow_stop" eval="0" />
        <field eval="1" name="flow_start"/>
    </record>


     <record id="bc_quality_workflow_transition_0" model="workflow.transition">
			<field name="signal">signal_done</field>
			<field model="workflow.activity" name="act_from" ref="bc_quality.action_draft"/>
			<field model="workflow.activity" name="act_to" ref="bc_quality.action_done"/>
			<field name="condition">True</field>
		</record>

     <record id="bc_quality_workflow_transition_1" model="workflow.transition">
			<field name="signal">signal_draft</field>
			<field model="workflow.activity" name="act_from" ref="bc_quality.action_done"/>
			<field model="workflow.activity" name="act_to" ref="bc_quality.action_draft"/>
			<field name="condition">True</field>
		</record>


</data>
</openerp>